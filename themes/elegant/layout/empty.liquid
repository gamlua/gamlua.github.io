<!doctype html>
<html lang='{{ request.locale.iso_code }}'>
  <head>
    <!-- Cơ bản -->
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>
      {{ page_title }}
      |
      {{ title }}
    </title>
    <meta name='description' content='{{ page_description | escape }}'>
    <meta name='keywords' content='{{ site.keywords | join: ', ' }}'>
    <meta name='author' content='{{ site.author }}'>
    <meta http-equiv='content-language' content='{{ site.language | default: 'vi' }}'>

    <!-- Canonical URL -->
    <link rel='canonical' href='{{ canonical_url }}'>

    <!-- Favicon -->
    <link rel='icon' href='/assets/favicon.ico' type='image/x-icon'>
    <link rel='apple-touch-icon' href='/assets/apple-touch-icon.png'>

    <!-- Theme Color / PWA -->
    <meta name='theme-color' content='#ffffff'>
    <meta name='apple-mobile-web-app-capable' content='yes'>
    <meta name='apple-mobile-web-app-status-bar-style' content='default'>

    <!-- Open Graph (Facebook, Zalo, LinkedIn...) -->
    <meta property='og:title' content='{{ page_title }}'>
    <meta property='og:description' content='{{ page_description }}'>
    <meta property='og:type' content='website'>
    <meta property='og:url' content='{{ canonical_url }}'>
    <meta property='og:image' content='{{ og_image_url }}'>
    <meta property='og:site_name' content='{{ site.title }}'>

    <!-- Twitter Card -->
    <meta name='twitter:card' content='summary_large_image'>
    <meta name='twitter:title' content='{{ page_title }}'>
    <meta name='twitter:description' content='{{ page_description }}'>
    <meta name='twitter:image' content='{{ og_image_url }}'>
    <meta name='twitter:site' content='@yourtwitter'>

    <!-- Structured Data (JSON-LD) -->
    <script type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "{{ site.title }}",
        "url": "{{ site.url }}"
      }
    </script>

    <!-- Performance: preload font, image -->
    {% if og_image_url %}
      <link rel='preload' as='image' href='{{ og_image_url }}'>
    {% endif %}

    {% if site.font_url %}
      <link rel='preload' href='{{ site.font_url }}' as='font' type='font/woff2' crossorigin='anonymous'>
    {% endif %}

    <!-- CSS/JS -->
    <link rel='stylesheet' href='/assets/style.css'>
    <script defer src='/assets/app.js'></script>

    <!-- Tùy biến thêm từ theme -->
    {{ head_extra }}
  </head>

  <body class='layout-theme'>
    {% comment %} {% render 'main-menu' %} {% endcomment %}

    <main class='layout-theme__content'>
      {{ content }}
    </main>

    empasdasdpapsdpaspdpas
  </body>
</html>
